{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AzureAiFoundry": {
    "Endpoint": "https://YOUR-RESOURCE-NAME.openai.azure.com",
    "Deployment": "gpt-4o-mini",
    "ApiVersion": "2024-10-21",
    "UseMockResponses": true
  },
  "CopilotPlugin": {
    "PluginId": "azure-foundry-assistant",
    "Name": "Azure Foundry Assistant",
    "Description": "Copilot plugin for enterprise AI task automation.",
    "FullDescription": "A Microsoft 365 Copilot plugin that connects to Azure AI Foundry for chat completions, conversation history, and enterprise AI workflows.",
    "ApiBaseUrl": "https://localhost:7181",
    "DeveloperName": "Contoso",
    "WebsiteUrl": "https://github.com/fchchen/azure-ai-foundry-copilot-api",
    "PrivacyUrl": "https://github.com/fchchen/azure-ai-foundry-copilot-api/blob/main/PRIVACY.md",
    "TermsOfUseUrl": "https://github.com/fchchen/azure-ai-foundry-copilot-api/blob/main/TERMS.md",
    "ContactEmail": "admin@contoso.com",
    "Version": "1.0.0"
  },
  "KeyVault": {
    "Enabled": false,
    "VaultUri": "https://YOUR-VAULT-NAME.vault.azure.net"
  },
  "BlobStorage": {
    "Enabled": false,
    "ConnectionString": "",
    "ContainerName": "conversations"
  },
  "EntraId": {
    "Enabled": false,
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "YOUR-TENANT-ID",
    "ClientId": "YOUR-CLIENT-ID",
    "Audience": "api://YOUR-CLIENT-ID"
  },
  "ApplicationInsights": {
    "Enabled": false,
    "ConnectionString": ""
  }
}
